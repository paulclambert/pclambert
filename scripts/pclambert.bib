  file        = {Eloranta2013a.pdf:pdf\\Eloranta2013a.pdf:PDF},
  keywords    = {Adult; Age Factors; Aged; Aged, 80 and over; Cardiovascular Diseases, complications/mortality/therapy; Cause of Death; Cohort Studies; Female; Hodgkin Disease, complications/mortality/therapy; Humans; Male; Middle Aged; Mortality, trends; Population Surveillance, methods; Registries, statistics /&/ numerical data; Risk Assessment, methods/statistics /&/ numerical data; Risk Factors; Sex Factors; Survivors, statistics /&/ numerical data; Sweden; Young Adult},
  language    = {eng},
  medline-pst = {ppublish},
