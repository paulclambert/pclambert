  keywords        = {Aged, 80 and over; Colonic Neoplasms; Humans; Life Expectancy; Male; Survival Analysis; Sweden, epidemiology; Uncertainty; Flexible parametric survival models; Loss in life expectancy; Relative survival},
  nlm-id          = {100968545},
