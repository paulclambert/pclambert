@Article{Andersson2014,
  author      = {Andersson, T. M-L. and Eriksson, H. and Hansson, J. and M{\aa}nsson-Brahme, E. and Dickman, P. W. and Eloranta, S. and Lambe, M. and Lambert, P. C.},
  journal     = {Cancer Epidemiology},
  title       = {Estimating the cure proportion of malignant melanoma, an alternative approach to assess long term survival: a population-based study.},
